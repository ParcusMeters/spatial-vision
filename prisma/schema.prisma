model Task {
  id          String    @id @default(cuid())
  title       String
  description String?
  status      String
  dueDate     DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  userId      String?
  user        User?     @relation(fields: [userId], references: [id])
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  password  String
  tasks     Task[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
